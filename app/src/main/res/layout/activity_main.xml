<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/blue_gradient"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/tool_bar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/logo_superior"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="TU DÃA"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    />

                <ImageButton
                    android:id="@+id/boton_perfil"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_profile"
                    />

            </RelativeLayout>

        </Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/fondo_reloj"
                    android:layout_width="200dp"
                    android:layout_height="215dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_reloj"
                    android:contentDescription="TODO" />

                <TextClock
                    android:id="@+id/reloj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="26sp"
                    android:textColor="@color/upper_blue"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/fecha"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/progreso_dia"
                android:textSize="18sp"
                android:textColor="@color/light_blue"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="21dp"
                android:background="@drawable/cambiar"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/perdido_medicamento"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

            <ListView
                android:layout_marginBottom="60dp"
                android:id="@+id/lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/add_button"/>

    <include layout="@layout/bottom_image"/>

</androidx.drawerlayout.widget.DrawerLayout>